# Production Environment Variables

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# Stripe Configuration (Required for payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key

# App Configuration
VITE_APP_URL=https://abrev.io
VITE_APP_NAME=Abrev.io

# Environment
NODE_ENV=production
VITE_ENVIRONMENT=production

# Debug (should be false in production)
VITE_DEBUG=false
VITE_LOG_LEVEL=error

# Security
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_REQUESTS_PER_MINUTE=60

# Analytics (optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=XXXXXXX

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn

# CDN Configuration (optional)
VITE_CDN_URL=https://cdn.abrev.io

# Email Service (optional)
VITE_SMTP_HOST=smtp.sendgrid.net
VITE_SMTP_PORT=587
VITE_SMTP_USER=apikey
VITE_SMTP_PASS=your-sendgrid-api-key
VITE_EMAIL_FROM=noreply@abrev.io